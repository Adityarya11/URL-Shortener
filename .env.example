# ========================
# Server
# ========================
SERVER_HOST=localhost
SERVER_PORT=8000
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=15s
BASE_URL=http://localhost:8000

# ========================
# MongoDB Atlas
# ========================
# Use the full Atlas URI that includes retryWrites and options.
# Example format (replace <password> and optionally encode special chars):
# mongodb+srv://arya0:
USE_MONGO=true
MONGO_URI=
MONGO_DB=urlshortener
MONGO_COLLECTION=urls
MONGO_TIMEOUT=10s

# ========================
# Redis (Phase 3 - optional)
# ========================
# If you don't want cache yet, set USE_CACHE=false
USE_CACHE=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=24h

# ========================
# Application behavior
# ========================
SHORT_CODE_LENGTH=6
DEFAULT_EXPIRATION=8760h    # 1 year
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h

# ========================
# Logging & Environment
# ========================
LOG_LEVEL=info
LOG_FORMAT=json
ENVIRONMENT=development


RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h
